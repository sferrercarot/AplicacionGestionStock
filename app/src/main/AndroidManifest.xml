<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permisos -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:networkSecurityConfig="@xml/network_security_config"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AplicacionGestionStockImprenta"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <!-- Punto de entrada de la app: login / splash -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- “Loading” que redirige según rol -->
        <activity
            android:name=".MainActivity"
            android:exported="true" />

        <!-- Pantallas definitivas por rol -->
        <activity
            android:name=".AdminActivity"
            android:exported="true" />
        <activity
            android:name=".FabricaActivity"
            android:exported="true" />
        <activity
            android:name=".ContabilidadActivity"
            android:exported="true" />
        <activity
            android:name=".StockListActivity"
            android:exported="true" />
        <activity
            android:name=".ProductDetailActivity"
            android:exported="true" />

        <activity
            android:name=".BuzonSolicitudesActivity"
            android:exported="true" />

        <activity
            android:name=".SolicitudMaterialActivity"
            android:exported="true" />

    </application>

</manifest>
