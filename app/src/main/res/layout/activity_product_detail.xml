<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgProductoDetalle"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="13dp"
                android:scaleType="centerCrop"
                android:src="@drawable/stock_box"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txtTituloProducto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Marca del producto"
                android:textSize="27sp"
                android:textStyle="bold"
                android:layout_gravity="start" />

            <TextView
                android:id="@+id/tvCurrentStock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stock actual: 0"
                android:textSize="18sp"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/tvCategoria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Categoria"
                android:textSize="18sp"
                android:layout_marginTop="4dp" />

            <EditText
                android:id="@+id/etEntradaStock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="Añade la cantidad"
                android:layout_marginTop="30dp" />

            <Button
                android:id="@+id/btnEntradaStock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Entrada"
                android:layout_marginTop="32dp"
                android:layout_gravity="center_horizontal" />

            <EditText
                android:id="@+id/etSalidaStock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="Añade la cantidad"
                android:layout_marginTop="50dp" />

            <Button
                android:id="@+id/btnSalidaStock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salida"
                android:layout_marginTop="32dp"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
